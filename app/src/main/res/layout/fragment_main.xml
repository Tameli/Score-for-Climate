<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="@string/textViewWelcome"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewCurrentScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="@string/textViewCurrentScore"
            android:textSize="24sp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLoadHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            style="?attr/materialButtonOutlinedStyle"
            android:text="load entire history" />


        <TextView
            android:id="@+id/textHistory"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text=""
            android:textSize="15sp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonScorePoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            app:strokeColor="@color/colorPrimaryDark"
            android:text="@string/buttonScore"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSetPreconfig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="@string/buttonSetPreconfig"
                android:layout_marginBottom="30dp"
                style="@style/Widget.MaterialComponents.Button.TextButton.Dialog" />

            </LinearLayout>

        </LinearLayout>

</LinearLayout>
